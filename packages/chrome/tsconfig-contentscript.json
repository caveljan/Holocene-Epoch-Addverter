{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/app",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": false,
        "skipLibCheck": true,
        "allowJs": true,
        "rootDir": "logic",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "files": [
        "./src/logic/index.ts",
        "./src/logic/Parser/index.ts"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
