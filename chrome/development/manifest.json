{
    "manifest_version" : 2,
    "name" : "Holocene Epoch Addverter",
    "short_name" : "HEA",
    "description" : "Add the Holocene Epoch timestamp (2017 CE becomes 12017 HE) before or after the timestamps present on the webpage (or replace them).",
    "version" : "1.0.3",
    "author": "caveljan",

    "browser_action" : {
        "default_title" : "Holocene Epoch Addverter",
        "default_icon" : "icons/icon.png",
        "default_popup" : "popup.html"
    },

    "icons" : {
        "16" : "icons/icon16.png",
        "32" : "icons/icon32.png",
        "48" : "icons/icon48.png",
        "128" : "icons/icon128.png"
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "incognito": "spanning",

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "/js/jquery-3.1.1.min.js",
            "/js/contentscript.js"
        ],
        "run_at": "document_end"
    }],

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "<all_urls>"
    ]
}
